{
  "name": "econ-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {},
    "options": [
      "--network=host"
    ]
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspaces",
  "runArgs": [
    "--userns=keep-id",
    "--mount",
    "type=bind,source=${localWorkspaceFolder},target=/workspaces",
    "--mount",
    "type=volume,source=econ_data,target=/workspaces/data"
  ],
  "forwardPorts": [
    8888,
    8787,
    3000
  ],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8787": {
      "label": "R Studio",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pre-commit install || true",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "REditorSupport.r",
        "ikuyadeu.r-lsp",
        "James-Yu.latex-workshop",
        "yzhang.markdown-all-in-one",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens",
        "ms-vscode.vscode-typescript-next",
        "Codeium.codeium",
        "Continue.continue",
        "TabNine.tabnine-vscode",
        "VisualStudioExptTeam.vscodeintellicode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.defaultInterpreterPath": "/opt/conda/envs/dev/bin/python",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "latex-workshop.latex.recipe.default": "latexmk (lualatex-draft)",
        "files.exclude": {
          "**/env": true
        }
      }
    }
  }
}
