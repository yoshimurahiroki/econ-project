{
  "name": "econ-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {},
    "options": [
      "--network=host"
    ]
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/econ-project",
  "mounts": [
    "type=volume,source=econ_data,target=/workspaces/econ-project/data"
  ],
  "runArgs": [
    "--init",
    "--hostname=econ-dev",
    "--network=host"
  ],
  "forwardPorts": [
    8888,
    8787,
    3000
  ],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8787": {
      "label": "R Studio",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /workspaces/econ-project || true && R -e 'install.packages(\"languageserver\", repos=\"https://cloud.r-project.org\")' && echo 'Container initialized successfully' && pre-commit install || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "REditorSupport.r",
        "ikuyadeu.r-lsp",
        "James-Yu.latex-workshop",
        "yzhang.markdown-all-in-one",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens",
        "GitHub.vscode-pull-request-github",
        "Codeium.codeium",
        "Continue.continue",
        "TabNine.tabnine-vscode",
        "VisualStudioExptTeam.vscodeintellicode",
        "oderwat.indent-rainbow",
        "streetsidesoftware.code-spell-checker",
        "shardulm94.trailing-spaces"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.formatting.provider": "none",
        "python.analysis.typeCheckingMode": "strict",
        "python.defaultInterpreterPath": "/home/vscode/miniforge3/envs/econ-env/bin/python",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "latex-workshop.latex.recipe.default": "latexmk (lualatex-draft)",
        "latex-workshop.latex.recipes": [
          {
            "name": "latexmk (lualatex-draft)",
            "tools": [
              "lualatex-draft"
            ]
          }
        ],
        "latex-workshop.latex.tools": [
          {
            "name": "lualatex-draft",
            "command": "lualatex",
            "args": [
              "-shell-escape",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOC%"
            ]
          }
        ],
        "files.exclude": {
          "**/env": true,
          "**/.venv": true,
          "**/__pycache__": true,
          "**/*.pyc": true
        },
        "ruff.lint.args": [
          "--config=pyproject.toml"
        ],
        "ruff.format.args": [
          "--config=pyproject.toml"
        ]
      }
    }
  }
}
